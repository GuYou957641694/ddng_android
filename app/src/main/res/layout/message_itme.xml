<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_12">

    <ImageView
        android:id="@+id/sample"
        android:layout_width="@dimen/dp_123"
        android:layout_height="@dimen/dp_60"
        android:background="#CE1E1E" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sample"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@+id/sample"
        android:text="积分已到帐通知" />

    <TextView
        android:id="@+id/yd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sample"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@+id/sample"
        android:text="已读" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sample"
        android:layout_toRightOf="@+id/yd"
        android:text="未读" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sample"
        android:layout_alignParentRight="true"
        android:text="2019-1-1" />
</RelativeLayout>
