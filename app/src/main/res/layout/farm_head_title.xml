<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF2BB3F6"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_header_pic"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40" />

        <TextView
            android:id="@+id/tv_farm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_header_pic"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_header_pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_header_pic"
            android:text="大鹌鹑"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_like"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/rl_shape"
            android:background="@drawable/farm_share_shape"
            android:paddingLeft="@dimen/dp_11"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_6">

            <ImageView
                android:id="@+id/iv_focus"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_toLeftOf="@+id/tv_focus"
                android:src="@mipmap/icon_like_false"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_focu"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_toLeftOf="@+id/tv_focus"
                android:src="@mipmap/icon_like_true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/iv_back"
            android:background="@drawable/farm_share_shape"
            android:paddingLeft="@dimen/dp_11"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_6">


            <ImageView
                android:id="@+id/iv_shape"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_3"
                android:src="@mipmap/icon_share" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_shape"
                android:text="分享"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_down_shape"
            android:padding="@dimen/dp_8">

            <ImageView

                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:src="@mipmap/icon_down" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF0F0F0"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/tv_location"
            android:text="地图"
            android:textColor="#FFF0F0F0"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/tv_location"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_location" />
    </RelativeLayout>
</LinearLayout>
