<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/tv_pic"
        android:layout_width="@dimen/dp_167"
        android:layout_height="@dimen/dp_120"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_pic"
        android:textColor="#FF313131"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_pic"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#FF9A9A9A"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_pic"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@+id/tv_pic"
        android:maxEms="15"
        android:singleLine="true"
        android:textColor="#FF9A9A9A"
        android:textSize="@dimen/sp_10" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/tv_pic"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="#FFF6F6F6"></View>
</RelativeLayout>
