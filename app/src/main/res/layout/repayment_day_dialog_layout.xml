<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="280dp"
    android:layout_height="185dp"
    android:background="@drawable/all_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="选择时间"
        android:textColor="#FF323232"
        android:textSize="@dimen/sp_16" />

    <com.bigpumpkin.app.ddng_android.weight.PickerView
        android:id="@+id/minute_pv"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF1F1F1" />

    <RelativeLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/vLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="#FFF1F1F1" />

        <TextView
            android:id="@+id/closeBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/vLine"
            android:background="@drawable/text_left"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/vLine"
            android:background="@drawable/text_right"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>
</LinearLayout>



