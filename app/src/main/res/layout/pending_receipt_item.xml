<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10">

        <ImageView
            android:id="@+id/tv_pic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/farm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_pic"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="顺义大南瓜农场生产苹果具有优质的产品品种，健康环保、口感甘甜带糖心…"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/varieties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/farm_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_toRightOf="@+id/tv_pic"
            android:text="已选：甘甜红橘 60-70公斤"
            android:textColor="#FF9A9A9A"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_pic"
            android:text="50"
            android:textColor="#FF252525"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_pic"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:textColor="#FF9C9C9C"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_lanmu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定制选项"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_maintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>


    <TextView
        android:id="@+id/sales"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/order_cancel_shape"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:text="申请售后"
        android:textColor="#FF252525"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
