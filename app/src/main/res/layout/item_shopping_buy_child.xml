<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFEFEFEF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_photo"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/iv_photo"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#FF323232"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_photo"
                android:background="@drawable/good_gg_shape"
                android:paddingLeft="@dimen/dp_9"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_9"
                android:paddingBottom="@dimen/dp_2">

                <TextView
                    android:id="@+id/gg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#FF949494"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="268dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/iv_photo"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:layout_toRightOf="@id/iv_photo">

                <TextView
                    android:id="@+id/tv_price_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:textColor="#FFE81A12"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#FF9C9C9C"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_adopt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定制选项"
                android:textColor="#FF323232"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_adopt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#FF9A9A9A"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <View
            android:id="@+id/one_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF6F6F6"></View>

        <LinearLayout
            android:id="@+id/lin_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_coupons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠卷"
                    android:textColor="#FF323232"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tv_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="#FFF86161"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>


            <View
                android:id="@+id/two_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFF6F6F6"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费"
                    android:textColor="#FF323232"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_postage_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="运费"
                    android:textColor="#FF323232"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_welfare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="植物放生公益"
                        android:textColor="#FF323232"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_welfare_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#FFF73636"
                        android:textSize="@dimen/sp_12" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv2"
                        android:layout_marginTop="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="果树认养协议"
                            android:textColor="#FF9A9A9A"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:layout_width="@dimen/dp_6"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignRight="@+id/tv5"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/good_icon" />
                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/there_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFF6F6F6"></View>

            <LinearLayout
                android:id="@+id/lin_must"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="准收宝"
                        android:textColor="#FF323232"
                        android:textSize="@dimen/sp_14" />

                    <Switch
                        android:id="@+id/switchs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:thumb="@drawable/switch_ios_thumb"
                        android:track="@drawable/switch_ios_track_selector" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv3"
                        android:layout_marginTop="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="果树认养协议"
                            android:textColor="#FF9A9A9A"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_must_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_toLeftOf="@+id/iv5"
                            android:textColor="#FFF73636"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:id="@+id/iv5"
                            android:layout_width="@dimen/dp_6"
                            android:layout_height="@dimen/dp_10"
                            android:layout_alignRight="@+id/tv8"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/good_icon" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_store_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="共1件，"
                    android:textColor="#FF9A9A9A"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小计"
                    android:textColor="#FF000000"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_store_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1212"
                    android:textColor="#FFF72323"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@drawable/childview_but_shape"
        android:orientation="horizontal"
        android:visibility="gone"></LinearLayout>

</LinearLayout>
