<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_240"
    android:layout_height="wrap_content"
    android:background="@drawable/all_shape">
    <TextView
        android:id="@+id/dialog_delete_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:text="确认清空全部历史记录吗?"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/gray_c"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />
    <View
        android:id="@+id/dialog_delete_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f5f5f5"
        android:layout_below="@+id/dialog_delete_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_below="@+id/dialog_delete_view"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/dialog_delete_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="确认"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/gray_c"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/dialog_delete_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/gray_cc"
            />
    </LinearLayout>

</RelativeLayout>
