<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_top_shape">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_370"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_pop_dismiss" />

        <ImageView
            android:id="@+id/sku_pic"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_8"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/sku_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/kc"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_toRightOf="@+id/sku_pic"
            android:text="qweqwe"
            android:textColor="#FFF72323"
            android:textSize="@dimen/sp_10" />


        <TextView
            android:id="@+id/kc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cy"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_toRightOf="@+id/sku_pic"
            android:text="库存"
            android:textColor="#FF9A9A9A"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/cy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sku_pic"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_toRightOf="@+id/sku_pic"
            android:text="请选择 "
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_12" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sku_pic"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#FFF6F6F6"></View>

        <TextView
            android:id="@+id/re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:text="品种"
            android:textColor="#FF323232"
            android:textSize="@dimen/dp_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sku_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/re"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="@dimen/dp_10" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sku_one"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#FFF6F6F6"></View>


        <TextView
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:text="规格/产量"
            android:textColor="#FF323232"
            android:textSize="@dimen/dp_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sku_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/res"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="@dimen/dp_10" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sku_two"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#FFF6F6F6"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginTop="@dimen/dp_13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买数量"
                android:textColor="#FF323232"
                android:textSize="@dimen/dp_12" />

            <RelativeLayout
                android:id="@+id/jian"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_toLeftOf="@+id/rv_id"
                android:background="#FFF0F0F0">

                <ImageView
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_reduction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_id"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_22"
                android:layout_toLeftOf="@+id/jia">

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="1"
                    android:textColor="#FF323232"
                    android:textSize="@dimen/dp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/jia"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:background="#FFF0F0F0">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/icon_sign" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_determine"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_determine"
                android:gravity="center"
                android:text="确定"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />

            <Button
                android:visibility="gone"
                android:id="@+id/tv_sure"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buy_shape"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/tv_independent"
                android:visibility="gone"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shopping_cart_shape"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
