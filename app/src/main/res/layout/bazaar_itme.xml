<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_shape"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="@dimen/dp_173"
        android:layout_height="@dimen/dp_173"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic">

        <TextView
            android:id="@+id/name"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_pic"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_below="@+id/name"
            android:background="@drawable/tv_gg_shape"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="#FF949494"
            android:textSize="@dimen/sp_10" />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:textColor="#FFE81A12"
            android:textSize="@dimen/sp_10" />


    </RelativeLayout>
</RelativeLayout>
