<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
 >

    <include layout="@layout/title_xml"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:text="收货人"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/personal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#FF343434"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/text"
            android:background="@drawable/edit_style_1"
            android:hint="请填写收货人姓名"
            android:textColorHint="#FF9A9A9A"
            android:textSize="@dimen/dp_12" />

        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_11"
            android:src="@mipmap/address_phone_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:background="#FFF6F6F6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:text="手机号码"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/personal_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/text1"
            android:background="@drawable/edit_style_1"
            android:hint="请填写收货人手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="#FF343434"
            android:textColorHint="#FF9A9A9A"
            android:textSize="@dimen/dp_12"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:background="#FFF6F6F6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:text="所在地区"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/personal_dress"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/text2"
            android:textColor="#FF343434"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="请填写收货人的地区"
            android:textSize="@dimen/dp_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:background="#FFF6F6F6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:text="详细地址"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:id="@+id/personal_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/text3"
            android:textColor="#FF343434"
            android:background="@drawable/edit_style_1"
            android:hint="如道路、门牌号、小区、单元室等"
            android:textColorHint="#FF9A9A9A"
            android:textSize="@dimen/dp_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFF8F8F8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:text="设置默认地址"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_14" />

        <Switch
            android:id="@+id/switchs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_11"
            android:checked="true"
            android:thumb="@drawable/switch_ios_thumb"
            android:track="@drawable/switch_ios_track_selector" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:background="#FFF6F6F6" />


    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/address_shape"
        android:stateListAnimator="@null"
        android:text="保存地址"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />


</LinearLayout>