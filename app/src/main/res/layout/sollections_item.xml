<?xml version="1.0" encoding="utf-8"?>
<com.ditclear.swipelayout.SwipeDragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ios="true"
    app:swipe_direction="left"
    app:swipe_enable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/dp_130"
            android:layout_marginBottom="@dimen/dp_10"

            android:layout_height="@dimen/dp_130"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/pic"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FF313131"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/pic"
            android:background="@drawable/iv_gg_shape"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_1"
            android:paddingRight="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_1"
            android:textColor="#FF949494"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/pic"
            android:textColor="#FFF72323"
            android:textSize="@dimen/sp_10" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_120"
            android:background="#F0F0F0"></View>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFF72323"
        android:orientation="horizontal"
        android:tag="menu">

        <TextView
            android:layout_width="90dp"
            android:layout_height="@dimen/dp_150"
            android:gravity="center"
            android:text="取消收藏"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</com.ditclear.swipelayout.SwipeDragLayout>
