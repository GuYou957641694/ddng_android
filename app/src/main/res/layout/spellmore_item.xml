<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_head"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:src="@mipmap/personal_heading" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/cv_head"
            android:text="秋月晚霞"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_farm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_name"
            android:text="秋月晚霞"
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/bt_participate">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/num"
                android:text="还差"
                android:textColor="#FF323232"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv"
                android:text="1人"
                android:textColor="#FFFF470E"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="拼成"
                android:textColor="#FF323232"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/etime"
                android:layout_width="@dimen/dp_71"
                android:layout_height="wrap_content"
                android:layout_below="@+id/num"
                android:layout_alignParentRight="true"
                android:text="剩余23:21:51"
                android:textColor="#FF9A9A9A"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <Button
            android:id="@+id/bt_participate"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/butparticipate_shape"
            android:text="参与拼单"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="#FFF6F6F6"></View>

</LinearLayout>
