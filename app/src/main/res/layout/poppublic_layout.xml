<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_top_shape">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_340"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_pop_dismiss" />

        <ImageView
            android:id="@+id/sku_pic"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/sku_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_kc"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_toRightOf="@+id/sku_pic"
            android:text="asdasd"
            android:textColor="#FFF72323"
            android:textSize="@dimen/sp_10" />


        <TextView
            android:id="@+id/tv_kc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_gg"
            android:layout_toRightOf="@+id/sku_pic"
            android:text="请选择 "
            android:textColor="#FF9A9A9A"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_gg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sku_pic"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@+id/sku_pic"
            android:text="请选择 "
            android:textColor="#FF323232"
            android:textSize="@dimen/sp_12" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sku_pic"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#FFF6F6F6"></View>

        <TextView
            android:id="@+id/re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:text="品种"
            android:textColor="#FF323232"
            android:textSize="@dimen/dp_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sku_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/re"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="@dimen/dp_10" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sku_one"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#FFF6F6F6"></View>


        <TextView
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:text="规格/产量"
            android:textColor="#FF323232"
            android:textSize="@dimen/dp_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sku_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/res"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sku_two"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="#FFF6F6F6"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="购买数量"
                    android:textColor="#FF323232"
                    android:textSize="@dimen/sp_12" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:id="@+id/rl_reduction"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:background="#FFF0F0F0">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="-"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:background="#FFF8F8F8">

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="1"
                            android:textColor="#FF323232"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_add"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:background="#FFF0F0F0">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="+"
                            android:textColor="#FF323232"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_sure"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sure_shape"
                android:gravity="center"
                android:text="确认"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
