<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5">


    <ImageView
        android:id="@+id/iv_banner_head_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingTop="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/banner_head_bg"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_6"
            android:text="幸运种子"
            android:textColor="#fff"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/home_ev"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/sp_15"
            android:layout_toRightOf="@+id/text"
            android:background="@drawable/edit_home"
            android:cursorVisible="false"
            android:drawableStart="@mipmap/check_false"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:hint="搜一搜开启美好生活"
            android:textColorHint="@color/gray_ccc"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/home_srv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativelayout"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.bigpumpkin.app.ddng_android.weight.FlingNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/dp_15"
                    app:image_scale_type="fit_xy"
                    app:indicator_drawable_selected="@drawable/dot_shape_selected"
                    app:indicator_drawable_unselected="@drawable/dot_shape_unselected"
                    app:indicator_height="6dp"
                    app:indicator_width="6dp" />


                <com.bigpumpkin.app.ddng_android.weight.ScrollTextView
                    android:id="@+id/scrolltextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/banner" />

                <com.yhy.gvp.widget.GridViewPager
                    android:id="@+id/gridviewpager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_160"
                    android:layout_below="@+id/scrolltextview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/color_f5f5f5"
                    android:overScrollMode="never"
                    app:num_columns="4"
                    app:page_size="8" />
                <!-- 分类下面的指示器 -->
                <net.lucode.hackware.magicindicator.MagicIndicator
                    android:id="@+id/indicator_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gridviewpager"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_6" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/classification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/indicator_container"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:overScrollMode="never" />

                <RelativeLayout
                    android:id="@+id/rela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/classification"
                    android:layout_marginTop="@dimen/dp_10"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/mspic"
                        android:layout_width="@dimen/dp_90"
                        android:layout_height="@dimen/dp_90"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@drawable/ms" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/mspic"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="开场" />

                        <TextView
                            android:id="@+id/tv_seckill_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_bg_black_corners"
                            android:paddingLeft="@dimen/dp_4"
                            android:paddingRight="@dimen/dp_4"
                            android:text="00"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <TextView
                            android:id="@+id/tv_seckill_minute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_bg_black_corners"
                            android:paddingLeft="@dimen/dp_4"
                            android:paddingRight="@dimen/dp_4"
                            android:text="00"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <TextView
                            android:id="@+id/tv_seckill_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_bg_black_corners"
                            android:paddingLeft="@dimen/dp_4"
                            android:paddingRight="@dimen/dp_4"
                            android:text="00"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/recy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rela"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView
                        android:id="@+id/farm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品牌农场街" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/farm" />
                </RelativeLayout>

                <com.youth.banner.Banner
                    android:id="@+id/advertising"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/recy"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20" />

                <RelativeLayout
                    android:id="@+id/relativelayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/advertising">

                    <TextView
                        android:id="@+id/foods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定制食物" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/foods" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout1">

                    <TextView
                        android:id="@+id/textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="救助农民" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rescue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelayout2">

                    <TextView
                        android:id="@+id/textw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="植物食疗" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/plant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textw" />
                </RelativeLayout>

                <com.youth.banner.Banner
                    android:id="@+id/advertisings"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/relativelayout3"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/advertisings"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="幸运集市"
                        android:textSize="@dimen/sp_17" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        app:tabGravity="fill"
                        app:tabMode="fixed"
                        app:tabTextColor="#000000" />

                    <com.bigpumpkin.app.ddng_android.weight.MyViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </com.bigpumpkin.app.ddng_android.weight.FlingNestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
