<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CustomerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customer_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="官方客服"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_17" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="-24dp"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/customer_service_shape"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/sp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方微信："
            android:textColor="#FF252525"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_official_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa1234556"
            android:textColor="#FF17D54F"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/customer_service_shape"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/sp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方电话："
            android:textColor="#FF252525"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_official_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15288888888"
            android:textColor="#FF17D54F"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
</LinearLayout>