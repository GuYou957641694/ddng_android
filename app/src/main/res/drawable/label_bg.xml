<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 标签选中时的背景 -->
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="#FFFF7053" />
            <corners android:radius="20dp" />
            <solid android:color="#FFFCEDE9" />
        </shape>
    </item>
    <!-- 标签的正常背景 -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#FFFCEDE9" />
            <corners android:radius="20dp" />
            <solid android:color="#FFFCEDE9" />
        </shape>
    </item>

</selector>