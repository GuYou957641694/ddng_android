<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solid 设置stroke设置的边框以内的颜色 -->
    <solid android:color="#F8F8F8"/>
    <!-- stroke主要设置组件的边框。width为边框宽度，color为边框颜色 -->
    <stroke android:width="@dimen/dp_0" android:color="#F8F8F8" />
    <!-- corners 设置边框四角弧度 -->
    <corners android:radius="@dimen/dp_4"/>
    <!-- padding主要设置组件里内容距离组件内边框的间距 -->
    <padding android:left="@dimen/dp_4" android:top="@dimen/dp_4"  android:bottom="@dimen/dp_4" android:right="@dimen/dp_4"/>
</shape>